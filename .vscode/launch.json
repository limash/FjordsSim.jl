    "version": "0.2.0",
    "configurations": [
        {
            "type": "julia",
            "request": "launch",
            "name": "Varna simulation",
            "program": "${workspaceFolder}/app/varna/simulation.jl",
            "stopOnEntry": false,
            "juliaAdditionalArgs": [
                "-O0"
            ]
        },
        {
            "type": "julia",
            "request": "launch",
            "name": "Sognefjord simulation",
            "program": "${workspaceFolder}/app/sognefjord/simulation.jl",
            "stopOnEntry": false,
            "juliaAdditionalArgs": [
                "-O0"
            ]
        },
        {
            "type": "julia",
            "request": "launch",
            "name": "Oslofjord simulation",
            "program": "${workspaceFolder}/app/oslofjord/simulation_45to82.jl",
            "stopOnEntry": false,
            "juliaAdditionalArgs": [
                "-O0"
            ]
        },
        {
            "type": "julia",
            "request": "launch",
            "name": "Run active Julia file",
            "program": "${file}",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "env": {},
            "juliaEnv": "${command:activeJuliaEnvironment}",
        }
    ]
}